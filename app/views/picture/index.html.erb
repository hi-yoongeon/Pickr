  </section>


  <section class="main">
    <div class="photo_area">
      <h3><span class="userid">ygmaster</span>님 외 <a href="#">5명</a>이 북마크했습니다.</h3>
      <p style="text-align: center;">
	<img src="/pictures/big/<%= @picture.url_hashed %>" alt="샘플이미지" />
      </p>

      <div class="buttons" style="text-align: center;">
	<button class="bookmark_off" alt="북마크"><span>5</span></button>
	<button class="good"><span>235</span></button>
	<button class="bad"><span>51</span></button>
